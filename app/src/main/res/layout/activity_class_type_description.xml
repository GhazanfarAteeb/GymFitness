<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="16dp"
	tools:context=".Activities.ClassTypeDescriptionActivity">
	<ImageView
		android:id="@+id/iv_back"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/ic_back_arrow"
		android:layout_alignParentStart="true"
		android:layout_alignBottom="@id/tv_class_details"
		android:layout_alignTop="@id/tv_class_details"/>
	<TextView
		android:id="@+id/tv_class_details"
		android:layout_centerHorizontal="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Class Details"
		android:textSize="24sp"
		android:textStyle="bold"/>
	<LinearLayout
		android:layout_marginTop="25dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_below="@id/tv_class_details">
		<TextView
			android:id="@+id/tv_class_type_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Class Type"
			android:textSize="20sp"
			android:textStyle="bold"/>
		<TextView
			android:id="@+id/tv_class_type_description"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Class Type"
			android:textSize="14sp"/>
		</LinearLayout>
	<LinearLayout
		android:layout_centerHorizontal="true"
		android:layout_alignParentBottom="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="25dp"
		android:orientation="vertical">
		<Button
			android:id="@+id/btn_update"
			android:layout_width="170dp"
			android:layout_height="wrap_content"
			android:text="Update"/>
		<Button
			android:id="@+id/btn_delete"
			android:layout_width="170dp"
			android:layout_height="wrap_content"
			android:backgroundTint="#ff0000"
			android:text="Delete"/>
	</LinearLayout>
</RelativeLayout>